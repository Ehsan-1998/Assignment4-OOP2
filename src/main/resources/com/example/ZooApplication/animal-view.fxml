<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="398.0" prefWidth="472.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ZooApplication.Controllers.AnimalViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Animal" />

    <Label fx:id="welcomeText" />
   <VBox prefHeight="290.0" prefWidth="459.0">
      <children>
         <Label text="Name" />
         <TextField fx:id="aNameTextField" prefWidth="338.0" />
         <Label text="Sex" />
         <TextField fx:id="aSexTextField" />
         <Label text="Age" />
         <TextField fx:id="aAgeTextField" />
         <Label text="Weight" />
         <TextField fx:id="aWeightTextField" />
         <Label text="Mane Size" />
         <TextField fx:id="aManeSizeTextField" />
      </children>
   </VBox>
   <AnchorPane prefHeight="116.0" prefWidth="338.0">
      <children>
         <Button fx:id="closeButton" layoutX="226.0" layoutY="2.0" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close" />
          <Button fx:id="saveButton" layoutX="140.0" layoutY="2.0" onAction="#onSaveButtonClick" text="Save" />
         <Button fx:id="clearButton" layoutX="51.0" layoutY="1.0" mnemonicParsing="false" onAction="#onClearButtonClick" text="Clear" />
      </children>
   </AnchorPane>
</VBox>
