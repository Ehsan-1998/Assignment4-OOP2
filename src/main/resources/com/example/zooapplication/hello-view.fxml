<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="313.0" prefWidth="377.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zooapplication.Controllers.AnimalViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Animal" />

    <Label fx:id="welcomeText" />
   <VBox prefHeight="176.0" prefWidth="338.0">
      <children>
         <Label text="Name" />
         <TextField fx:id="nameTextField" onAction="#onNameTextField" prefWidth="338.0" />
         <Label text="Sex" />
         <TextField fx:id="sexTextField" onAction="#onSexTextField" />
         <Label text="Age" />
         <TextField fx:id="ageTextField" onAction="#onAgeTextField" />
         <Label text="Weight" />
         <TextField fx:id="weightTextField" onAction="#onWeightTextField" />
      </children>
   </VBox>
   <AnchorPane prefHeight="116.0" prefWidth="338.0">
      <children>
         <Button fx:id="closeButton" layoutX="226.0" layoutY="2.0" mnemonicParsing="false" onAction="#onCloseButtonClick" text="Close" />
          <Button fx:id="saveButton" layoutX="140.0" layoutY="2.0" onAction="#onSaveButtonClick" text="Save" />
      </children>
   </AnchorPane>
</VBox>
